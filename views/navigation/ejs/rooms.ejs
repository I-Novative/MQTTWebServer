<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/_header') %>
    <title>Habitaciones</title>
</head>
<body>
    <%- include('../../partials/_socket') %>
    <div class="wrapper ">
        <div class="sidebar" data-color="green" data-background-color="black">
        <div class="logo">
          <img src="../../dashboard/assets/img/logo.png" class="logo-normal" width="250" alt="">
          </div>
          <div class="sidebar-wrapper">
            <ul class="nav">
              <li class="nav-item">
                <a class="nav-link" href="/">
                  <i class="material-icons">poll</i>
                  <p>Inicio</p>
                </a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/rooms/">
                  <i class="material-icons">single_bed</i>
                  <p>Habitaciones</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/guests/">
                  <i class="material-icons">face</i>
                  <p>Huéspedes</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/checkIns/">
                  <i class="material-icons">today</i>
                  <p>Check In</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/checkOuts/">
                  <i class="material-icons">event_available</i>
                  <p>Check Out</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/sensors/">
                  <i class="material-icons">settings_remote</i>
                  <p>Dispositivos</p>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/totals/">
                  <i class="material-icons">clean_hands</i>
                  <p>Consumos generales</p>
                </a>
              </li>
              <% if(userDoc.role.roleName === 'Admin'){ %>
                <li class="nav-item">
                  <a class="nav-link" href="/unexpected/">
                    <i class="material-icons">report</i>
                    <p>Consumos inesperados</p>
                  </a>
                </li>
              <% } %>
            </ul>
          </div>
        </div>
        <div class="main-panel">

          <%- include('../../partials/_navbar') %>

          <div class="content">
              <div class="container-fluid">

                <%- include('../../tables/roomsTable') %>
                
                <div class="row mb-5 mt-5">
                    <div class="col text-center">
                      <h2>Gráficos</h2>
                    </div>
                  </div>
        
                  <div class="row justify-content-center mb-5">
                    <div class="col-8">
                      <div>
                        <canvas id="waterXRoom"></canvas>
                      </div>
                    </div>
                  </div>
        
                  <div class="row justify-content-center mb-5">
                    <div class="col-8">
                      <div>
                        <canvas id="towelsWeightXRoom"></canvas>
                      </div>
                    </div>
                  </div>
              </div>
          </div>
        </div>
    </div>

    <%- include('../../partials/_scripts') %>
    <script src="../../navigation/js/rooms.js"></script>
    <script src="../../charts/towelsWeightXRoom.js"></script>
    <script src="../../charts/waterXRoom.js"></script>

</body>
</html>