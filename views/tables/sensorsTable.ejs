<div class="row mb-5 mt-5">
    <div class="col-md-12">
        <div class="card card-plain">
            <div class="card-header card-header-primary text-center">
                <h3 class="card-title mt-0">Canastos inteligentes</h3>
                <h5 class="card-category">Estado de cada canasto dentro de las habitaciones</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover text-center">
                        <thead class="">
                            <th>Identificador</th>
                            <th>Habitaci√≥n</th>
                            <th>Estado</th>
                        </thead>
                        <tbody>
                            <% sensors.forEach(function(sensor){ %>
                                <tr>
                                    <td><%= sensor.sensorName %></td>
                                    <td><%= sensor.room_id.roomNumber %></td>
                                    <td>
                                        <% if(sensor.state == true){ %>
                                            <span class="text-success font-weight-bold">Activo</span>
                                        <% } else { %>
                                            <span class="text-danger font-weight-bold">Inactivo</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>